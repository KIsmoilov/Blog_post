<div class="users-container">
    <nav>
    <ul>
    <li><%= link_to "Home", users_path, class: "nav-link" %></li>
    <li><%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "nav-link"  %></li>
    </ul>
    </nav>
    <h1 class="users-heading">Users Count <%= @users.length%></h1>
    <% @users.each do |user| %>
        <%= link_to user_path(user.id), class:"text-dec" do %>
        <div class="user-box">
            <img class="user-img" src="<%= user.photo %>" alt=<%= user.name %>/>
            <div class="user-info-box">
                <h2 class="user-name"><%= user.name %></h2>
                <p class="user-post-count">Number of posts: <%= user.posts_counter%></p>
            </div>
        </div>
        <% end%>
        <% end %>
        <%= link_to new_post_path, class:"text-dec" do %>
        <button>Create a post</button>
        <% end %>
</div>